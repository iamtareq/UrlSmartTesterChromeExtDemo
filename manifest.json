{
  "manifest_version": 3,
  "name": "UrlSmartTester",
  "description": "__MSG_appDesc__",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_appName__"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "config.js",
        "utils.js", 
        "dataset.js",
        "security_payloads.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "scripting",
    "storage", 
    "downloads",
    "activeTab",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "utils.js",
        "dataset.js", 
        "security_payloads.js",
        "testpage.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "default_locale": "bn"
}